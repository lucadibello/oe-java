{
    "name": "OpenEnclave+Java Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "mounts": [
        {
            "source": "${localEnv:HOME}/.config/nvim",
            "target": "/root/.config/nvim",
            "type": "bind"
        },
        {
            "source": "${localEnv:HOME}/.tmux.alpine.conf",
            "target": "/root/.tmux.conf",
            "type": "bind"
        }
    ],
    "runArgs": ["--network=host", "--name", "openenclave-devcontainer"],
    "postCreateCommand": "echo 'Public key:' && cat /root/.ssh/id_ed25519.pub",
    "remoteUser": "root"
}
